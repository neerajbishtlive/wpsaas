APP_NAME="WP SaaS Platform"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com
APP_DOMAIN=yourdomain.com

LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=wp_saas_control
DB_USERNAME=wp_saas_user
DB_PASSWORD=

# WordPress Database Root Credentials (for creating site databases)
DB_ROOT_USERNAME=root
DB_ROOT_PASSWORD=

# Paths Configuration
WP_CORE_PATH=/home/wp-saas-platform/wordpress-core
SITES_PATH=/home/wp-saas-platform/sites
STORAGE_PATH=/home/wp-saas-platform/storage
SCRIPTS_PATH=/home/wp-saas-platform/scripts

# Redis Configuration
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="support@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# Stripe Configuration
STRIPE_KEY=pk_live_xxx
STRIPE_SECRET=sk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx
CASHIER_CURRENCY=usd
CASHIER_CURRENCY_LOCALE=en

# Storage Configuration
FILESYSTEM_DISK=local
# S3/DigitalOcean Spaces Configuration (optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_ENDPOINT=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Security Settings
ADMIN_IP_RESTRICTION=false
ADMIN_ALLOWED_IPS="127.0.0.1,192.168.1.0/24"
ADMIN_REQUIRE_2FA=true
BCRYPT_ROUNDS=10

# Rate Limiting
RATE_LIMIT_GUEST_PER_MINUTE=10
RATE_LIMIT_FREE_PER_MINUTE=30
RATE_LIMIT_PAID_PER_MINUTE=120

# Site Limits
GUEST_SITE_EXPIRY_HOURS=24
FREE_SITE_EXPIRY_DAYS=7
SITE_SUSPENSION_GRACE_DAYS=3
PAYMENT_FAILURE_GRACE_DAYS=7

# Resource Limits (MB)
DEFAULT_SITE_STORAGE_LIMIT=500
DEFAULT_BANDWIDTH_LIMIT=5000

# Backup Settings
BACKUP_RETENTION_DAYS=30
BACKUP_REMOTE_STORAGE=false
MAX_BACKUPS_PER_SITE=10

# System Settings
PHP_MEMORY_LIMIT=256M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=50M
PHP_POST_MAX_SIZE=50M

# WordPress Settings
WP_DEBUG=false
WP_CACHE=true
DISABLE_WP_CRON=true

# Monitoring
MONITOR_CPU_THRESHOLD=80
MONITOR_MEMORY_THRESHOLD=80
MONITOR_DISK_THRESHOLD=90

# Support
SUPPORT_EMAIL=support@yourdomain.com
SUPPORT_PHONE="+1234567890"

# Analytics (optional)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
SENTRY_LARAVEL_DSN=

# Queue Workers
QUEUE_WORKER_MEMORY=512
QUEUE_WORKER_TIMEOUT=300
QUEUE_WORKER_TRIES=3